{
  "name": "w3c-website-redesign-design-system",
  "version": "1.0.0",
  "author": "Studio 24",
  "description": "",
  "main": "index.js",
  "config": {
    "from": "apollo-src/assets",
    "to": "assets/apollo-dist/assets"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:normalize": "shx cp ./node_modules/normalize.css/normalize.css ${npm_package_config_from}/styles/sass/40-base/_normalize.scss",
    "css:core:compressed": "node-sass --output-style=compressed --source-map=true ${npm_package_config_from}/styles/core.scss ${npm_package_config_to}/styles/core.min.css",
    "css:core:uncompressed": "node-sass ${npm_package_config_from}/styles/core.scss ${npm_package_config_to}/styles/core.css",
    "css:advanced:compressed": "node-sass --output-style=compressed --source-map=true ${npm_package_config_from}/styles/advanced.scss ${npm_package_config_to}/styles/advanced.min.css",
    "css:advanced:uncompressed": "node-sass ${npm_package_config_from}/styles/advanced.scss ${npm_package_config_to}/styles/advanced.css",
    "css:sass": "npm-run-all --parallel css:core:* css:advanced:*",
    "css:autoprefixer": "autoprefixer-cli -d ${npm_package_config_to}/styles ${npm_package_config_to}/styles/*.css",
    "css": "npm-run-all --sequential css:normalize css:sass css:autoprefixer",
    "images:imagemin": "imagemin ${npm_package_config_from}/images/* --out-dir=${npm_package_config_to}/images --plugin=pngquant --plugin=mozjpeg --plugin=pngcrush --plugin=zopfli",
    "images:svg": "svgo --folder=${npm_package_config_from}/svg --output=${npm_package_config_to}/svg --disable='removeViewBox' | true",
    "images": "npm-run-all --parallel images:imagemin images:svg",
    "fonts": "shx cp -r ${npm_package_config_from}/fonts/* ${npm_package_config_to}/fonts",
    "js:copypackages": "copyfiles -f ./node_modules/accessible-autocomplete/dist/accessible-autocomplete.min.js ./node_modules/fontfaceobserver/fontfaceobserver.js ./node_modules/parsleyjs/dist/parsley.js ./node_modules/pikaday/pikaday.js ${npm_package_config_from}/js/libraries",
    "js:copylibraries": "shx cp -r ${npm_package_config_from}/js/libraries/* ${npm_package_config_to}/js/libraries/",
    "webpack:uncompressed": "webpack --config webpack.config.js",
    "webpack:compressed": "webpack --config webpack.config.min.js",
    "js": "npm-run-all --parallel js:copypackages js:copylibraries webpack:*",
    "build-apollo": "npm-run-all --parallel css images fonts js",
    "prebuild-apollo": "shx rm -rf ${npm_package_config_to} && shx mkdir -p ${npm_package_config_to}/fonts && shx mkdir ${npm_package_config_to}/images && shx mkdir ${npm_package_config_to}/js && shx mkdir ${npm_package_config_to}/js/libraries && shx mkdir ${npm_package_config_to}/styles && shx mkdir ${npm_package_config_to}/svg",
    "build-site": "node build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/w3c/w3c-website-redesign-design-system/.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/w3c/w3c-website-redesign-design-system/issues"
  },
  "homepage": "https://github.com/w3c/w3c-website-redesign-design-system/#readme",
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "babel-loader": "^8.1.0",
    "jstransformer-marked": "^1.0.3",
    "jstransformer-nunjucks": "^1.0.0",
    "metalsmith": "^2.3.0",
    "metalsmith-code-highlight": "^1.1.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-in-place": "^4.4.2",
    "metalsmith-layouts": "^2.3.1",
    "metalsmith-static": "0.0.5",
    "webpack-cli": "^4.1.0"
  },
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "accessible-autocomplete": "^2.0.3",
    "autoprefixer-cli": "^1.0.0",
    "copyfiles": "^2.4.0",
    "fontfaceobserver": "^2.1.0",
    "imagemin-cli": "^6.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngcrush": "^7.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-zopfli": "^7.0.0",
    "ini": "^1.3.6",
    "node-sass": "^6.0.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "object-path": "^0.11.5",
    "parsleyjs": "^2.9.2",
    "pikaday": "^1.8.2",
    "shx": "^0.2.2",
    "svgo": "^1.3.2",
    "webpack": "^5.2.0"
  }
}
