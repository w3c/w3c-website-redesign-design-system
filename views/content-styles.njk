{% extends "two-col.njk" %}

{% block main %}
	{{ contents | safe }}
{% endblock %}

{% block sidemenu %}
	<nav class="section-nav">
		<ul class="clean-list" role="list">
			{% for style in collections.styles %}
				<li class="{{ 'active' if nav in style.path }}"><a class="nav-link" href="/{{ style.path }}">{{ style.title }}</a></li>
			{% endfor %}
		</ul>
	</nav>
{% endblock %}